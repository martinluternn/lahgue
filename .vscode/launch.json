    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Android",
            "cwd": "${workspaceFolder}",
            "type": "reactnativedirect",
            "request": "launch",
            "platform": "android"
        },
        {
            "name": "Run iOS",
            "cwd": "${workspaceFolder}",
            "type": "reactnativedirect",
            "request": "launch",
            "platform": "ios"
        },
        {
            "name": "Run Web",
            "webRoot": "${workspaceFolder}",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8081",
        }
    ],
